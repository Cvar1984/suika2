{
    "env": { // set DEVKITPRO_HOME in your user env
        "devkitpro": "${env:DEVKITPRO}"
    },
    "configurations": [
        {
            "name": "Switch",
            "includePath": [
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/build/switch/libroot/include/**",
                "${env:devkitpro}/libnx/include",
                "${env:devkitpro}/devkitA64/aarch64-none-elf/include/machine",
                "${env:devkitpro}/portlibs/switch/include/**"
            ],
            "defines": [
                "SWITCH"
            ],
            "compilerPath": "${env:devkitpro}/devkitA64/bin/aarch64-none-elf-gcc",
            "cStandard": "c89",
            "cppStandard": "c++11",
            "intelliSenseMode": "linux-gcc-arm64"
        }
    ],
    "version": 4
}